
#include <std>
#include <stream.h>


class operations {
public:
   int add();
   operations(int i, int j);

private:
   int op1;//Operand 1
   int op2;//Operand 2
};

int operations::add()
{
        std::cout << "Sum of "<<op1<<" + "<<op2<<" = "<<op1+op2<<std::endl;
        return(op1 + op2);
}
